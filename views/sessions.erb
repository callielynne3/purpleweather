<h2>Login</h2>
<form method="post" action="/sessions">
  <div class="field">
    <label for="user_username">Email</label>
    <input type="text" name="email" id="user_email" />
  </div>
  <div class="field">
    <label for="user_password">Password</label>
    <input type="password" name="hashed_password" id="user_password" />
  </div>
  <div class="field">
    <input type="submit" value="login"/>
  </div>
 </form>